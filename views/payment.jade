doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Payment for #{vehicleName}
        link(rel="stylesheet" href="/css/styles1.css")
    body
        header
            h1 Payment for #{vehicleName}
            nav
                a(href="/") Home
                a(href="/rent") Rent
                a(href="/about") About
                a(href="/contact") Contact

        form(action="/rent/confirm" method="POST")
            input(type="hidden" name="vehicleName" value=#{vehicleName})
            input(type="hidden" name="vehiclePrice" value=#{vehiclePrice})
            input(type="hidden" name="vehicleDescription" value=#{vehicleDescription})
            
            label(for="cardNumber") Card Number:
            input(type="text" id="cardNumber" name="cardNumber" required)

            label(for="cvv") CVV:
            input(type="text" id="cvv" name="cvv" required)

            label(for="mobileNumber") Mobile Number:
            input(type="text" id="mobileNumber" name="mobileNumber" required)

            button(type="submit") Submit Payment
